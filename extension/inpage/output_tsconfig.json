{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2020",
		"moduleResolution": "node",
		"outDir": "../app/inpage/output/",
		"rootDir": "../app/inpage/build/",
		"sourceMap": false,
		"declaration": false,
		"declarationMap": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"lib": ["ES2021", "DOM"],
		"plugins": [ { "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js", "after": true } ]
	},
	"include": [
		"../app/inpage/build/*.ts"
	],
	"ts-node": {
		"esm": true
	}
}
